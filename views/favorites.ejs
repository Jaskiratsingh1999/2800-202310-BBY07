<%- include("templates/header") %>
  <style>
    .image-container {
      width: 25%;
      aspect-ratio: 1 / 1;
    }

    .card-img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .bi-heart {
      font-size: 1.5rem;
    }

    .bi-heart.active {
      color: red;
    }

    .heart-btn {
      position: absolute;
      top: 0;
      right: 0.5rem;
      margin-top: 0.5rem;
    }

    .card-text {
      margin-top: 1rem;
    }

    /* For non-mobile view  */
    @media (min-width: 768px) {
      .card-title {
        font-size: 2.5rem;
      }

      .card-text {
        font-size: 1.4rem;
        margin-top: 1.5rem;
      }
    }
  </style>
      <div style="height: 120px;"></div>
  <div class="container">
    <div class="card d-flex flex-row align-items-stretch mb-3">
      <div class="image-container">
        <img src="/food1.jpg" alt="Image description" class="card-img">
      </div>
      <div class="card-body d-flex flex-column position-relative">
        <button type="button" class="btn btn-outline-danger heart-btn active">
          <i class="bi bi-heart"></i>
        </button>
        <h3 class="card-title">Recipe title</h3>
        <p class="card-text">Short description of the recipe goes here. One or two sentences maximum</p>
      </div>
    </div>

    <div class="card d-flex flex-row align-items-stretch mb-3">
      <div class="image-container">
        <img src="/food1.jpg" alt="Image description" class="card-img">
      </div>
      <div class="card-body d-flex flex-column position-relative">
        <button type="button" class="btn btn-outline-danger heart-btn active">
          <i class="bi bi-heart"></i>
        </button>
        <h3 class="card-title">Recipe title 2</h3>
        <p class="card-text">Short description of the recipe goes here. One or two sentences maximum</p>
      </div>
    </div>

    <div class="card d-flex flex-row align-items-stretch mb-3">
      <div class="image-container">
        <img src="/food1.jpg" alt="Image description" class="card-img">
      </div>
      <div class="card-body d-flex flex-column position-relative">
        <button type="button" class="btn btn-outline-danger heart-btn active">
          <i class="bi bi-heart"></i>
        </button>
        <h3 class="card-title">Recipe title 3</h3>
        <p class="card-text">Short description of the recipe goes here. One or two sentences maximum</p>
      </div>
    </div>
  </div>
  <div style="height: 50px;"></div>
  <script>
    // this deletes the card when the heart btn is clicked
    const heartBtns = document.querySelectorAll('.heart-btn');
    heartBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        if (btn.classList.contains('active')) {
          btn.parentNode.parentNode.remove();
        }
        btn.classList.toggle('active');
      });
    });
  </script>
