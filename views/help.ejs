  <script>
    // Get all the question buttons
var faqToggles = document.getElementsByClassName("faq-toggle");

// Add event listeners to each button
for (var i = 0; i < faqToggles.length; i++) {
  faqToggles[i].addEventListener("click", function() {
    // Toggle the active class on the button
    this.classList.toggle("active");
    // Toggle the display property of the answer div
    var faqAnswer = this.nextElementSibling;
    if (faqAnswer.style.display === "block") {
      faqAnswer.style.display = "none";
    } else {
      faqAnswer.style.display = "block";
    }
  });
}

  </script>
